<div class="register-centered">
	<header>
	<h1>Registration Form</h1>
	</header>

<form name ="registerform" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded" onsubmit="return errorMessage();">
		<div class="labelcontainer">
			<label for="uname">Username</label>
		</div>
		<div>
			<input type="text" name="uname" placeholder="Username" required/>
			
		</div>
		<div class="labelcontainer">
			<label for="email">Email</label>
		</div>
		<div>
			<input type="email" name="email" placeholder="email@email.com" required/>
		</div>

		<div class="labelcontainer">
			<label for="pword">Password</label>
		</div>
		<div>
			<input type="password" name="pword" placeholder="Password" required/>
		</div>

		<div class="labelcontainer">
			<label for="cpword">Confirm Password</label>
		</div>
		<div>
			<input type="password" name="cpword" placeholder="Confirm Password" required/>
		</div>
		<div id="register-checkboxcont">
			<input type="checkbox" id="checkage" name="checkage" required/> 
			<label class="checklabel" for="checkTOS">Over 13+ years of age</label>	
		</div>

		<div id="register-checkboxcont">
			<input type="checkbox" id="checkTOS" name="TOS" required/>
			<label class="checklabel" for="checkTOS"><a href=""> Accept TOS and Privacy Rules</a></label>	
		</div>
	<div id="regerror" ></div>
	<div class="buttoncontainer">
		<input type="submit" id="register" value="Register"/>
	</div>
</form>
</div>

<script src="../public/js/formValidation.js"></script>

